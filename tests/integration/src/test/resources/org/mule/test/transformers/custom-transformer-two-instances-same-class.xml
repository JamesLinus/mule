<?xml version="1.0" encoding="UTF-8"?>
<mule xmlns="http://www.mulesoft.org/schema/mule/core"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xmlns:spring="http://www.springframework.org/schema/beans"
      xsi:schemaLocation="http://www.mulesoft.org/schema/mule/core http://www.mulesoft.org/schema/mule/core/current/mule.xsd
             http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-current.xsd">

    <custom-transformer name="appendStringA" class="org.mule.runtime.core.transformer.simple.StringAppendTransformer">
        <spring:property name="message" value=" A"/>
    </custom-transformer>

    <custom-transformer name="appendStringB" class="org.mule.runtime.core.transformer.simple.StringAppendTransformer">
        <spring:property name="message" value=" B"/>
    </custom-transformer>

</mule>